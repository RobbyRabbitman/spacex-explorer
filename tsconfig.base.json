{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@spacex/launch-timeline/features/lazy/launch-timeline": [
        "libs/launch-timeline/features/lazy/launch-timeline/src/index.ts"
      ],
      "@spacex/launch-timeline/ui/launch-overview-card": [
        "libs/launch-timeline/ui/launch-overview-card/src/index.ts"
      ],
      "@spacex/launch/data/data-launch": [
        "libs/launch/data/data-launch/src/index.ts"
      ],
      "@spacex/rocket/data/data-rocket": [
        "libs/rocket/data/data-rocket/src/index.ts"
      ],
      "@spacex/shared/data/data-common": [
        "libs/shared/data/data-common/src/index.ts"
      ],
      "@spacex/shared/types/common": ["libs/shared/types/common/src/index.ts"],
      "@spacex/shared/types/launch": ["libs/shared/types/launch/src/index.ts"],
      "@spacex/shared/types/rocket": ["libs/shared/types/rocket/src/index.ts"],
      "@spacex/shared/util/util-ts": ["libs/shared/util/util-ts/src/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "strictTemplates": true,
    "strictInputAccessModifiers": true
  },
  "exclude": ["node_modules", "tmp"]
}
